@page
@model UniversityReservations.Pages.Reservations.EditModel
@{
    ViewData["Title"] = "Edit Reservation";
}

<h2>Edit Reservation</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post" id="reservationForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.Id" />

            <div class="form-group">
                <label asp-for="Reservation.LecturerId" class="control-label">Lecturer</label>
                <select asp-for="Reservation.LecturerId" class="form-control" asp-items="ViewBag.LecturerId" required>
                    <option value="">-- Select Lecturer --</option>
                </select>
                <span asp-validation-for="Reservation.LecturerId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.LectureHallId" class="control-label">Lecture Hall</label>
                <select asp-for="Reservation.LectureHallId" class="form-control" asp-items="ViewBag.LectureHallId" required>
                    <option value="">-- Select Lecture Hall --</option>
                </select>
                <span asp-validation-for="Reservation.LectureHallId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.StartTime" class="control-label"></label>
                <input asp-for="Reservation.StartTime" class="form-control" type="datetime-local" required />
                <span asp-validation-for="Reservation.StartTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.EndTime" class="control-label"></label>
                <input asp-for="Reservation.EndTime" class="form-control" type="datetime-local" required />
                <span asp-validation-for="Reservation.EndTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Reservation.Purpose" class="control-label"></label>
                <textarea asp-for="Reservation.Purpose" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Reservation.Purpose" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Availability Check</h5>
            </div>
            <div class="card-body">
                <button type="button" id="checkAvailability" class="btn btn-info mb-3">Check Availability</button>
                <div id="availabilityResult"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('checkAvailability').addEventListener('click', function() {
            const lectureHallId = document.getElementById('Reservation_LectureHallId').value;
            const startTime = document.getElementById('Reservation_StartTime').value;
            const endTime = document.getElementById('Reservation_EndTime').value;
            const reservationId = document.getElementById('Reservation_Id').value;

            if (!lectureHallId || !startTime || !endTime) {
                document.getElementById('availabilityResult').innerHTML =
                    '<div class="alert alert-warning">Please select a lecture hall and enter both start and end times.</div>';
                return;
            }

            fetch(`/api/ReservationsApi/CheckAvailability?lectureHallId=${lectureHallId}&startTime=${startTime}&endTime=${endTime}&excludeReservationId=${reservationId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.available) {
                        document.getElementById('availabilityResult').innerHTML =
                            '<div class="alert alert-success">This time slot is available!</div>';
                    } else {
                        document.getElementById('availabilityResult').innerHTML =
                            '<div class="alert alert-danger">This time slot is not available. Please choose a different time.</div>';
                    }
                })
                .catch(error => {
                    document.getElementById('availabilityResult').innerHTML =
                        '<div class="alert alert-danger">Error checking availability. Please try again.</div>';
                });
        });
    </script>
}
