@page
@model UniversityReservations.Pages.LectureHalls.EditModel
@{
    ViewData["Title"] = "Edit Lecture Hall";
}

<h2>Edit Lecture Hall</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LectureHall.Id" />
            <div class="form-group">
                <label asp-for="LectureHall.Name" class="control-label"></label>
                <input asp-for="LectureHall.Name" class="form-control" />
                <span asp-validation-for="LectureHall.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LectureHall.Capacity" class="control-label"></label>
                <input asp-for="LectureHall.Capacity" class="form-control" />
                <span asp-validation-for="LectureHall.Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LectureHall.Location" class="control-label"></label>
                <input asp-for="LectureHall.Location" class="form-control" />
                <span asp-validation-for="LectureHall.Location" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="LectureHall.HasProjector" />
                <label class="form-check-label" asp-for="LectureHall.HasProjector"></label>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="LectureHall.HasMicrophone" />
                <label class="form-check-label" asp-for="LectureHall.HasMicrophone"></label>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
