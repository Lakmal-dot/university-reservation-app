@page
@model UniversityReservations.Pages.Lecturers.DeleteModel
@{
    ViewData["Title"] = "Delete Lecturer";
}

<h2>Delete Lecturer</h2>

<h3>Are you sure you want to delete this lecturer?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Lecturer.Subject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Lecturer.Subject.Name)
