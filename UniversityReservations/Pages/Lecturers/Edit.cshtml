@page
@model UniversityReservations.Pages.Lecturers.EditModel
@{
    ViewData["Title"] = "Edit Lecturer";
}

<h2>Edit Lecturer</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lecturer.Id" />
            <div class="form-group">
                <label asp-for="Lecturer.FirstName" class="control-label"></label>
                <input asp-for="Lecturer.FirstName" class="form-control" />
                <span asp-validation-for="Lecturer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lecturer.LastName" class="control-label"></label>
                <input asp-for="Lecturer.LastName" class="form-control" />
                <span asp-validation-for="Lecturer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lecturer.Email" class="control-label"></label>
                <input asp-for="Lecturer.Email" class="form-control" />
                <span asp-validation-for="Lecturer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lecturer.SubjectId" class="control-label">Subject</label>
                <select asp-for="Lecturer.SubjectId" class="form-control" asp-items="ViewBag.SubjectId">
                    <option value="">-- Select Subject --</option>
                </select>
                <span asp-validation-for="Lecturer.SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
